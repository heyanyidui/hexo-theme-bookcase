pre {

	.hljs {

	}

	.hljs[lang] {
		&:before {
			color: color-code-lang;
			content: attr(lang);
		    position: absolute;
		    font-size: 0.6rem;
		    font-weight: 600;
		    height: 15px;
		    line-height: 15px;
		    right: 0px;
		    text-align: right;
		    top: 0px;
		    padding: 5px 10px 0px;
		}
	}

	.hljs table,
	.hljs tr,
	.hljs td {
		width: 100%;
		border-collapse: collapse;
		padding: 0;
		margin: 0;
	}
	.hljs .gutter {
		width: 1.5em;
	}

	
}

.gutter pre {
	color: #999;
	margin-bottom: 0;
	padding: 0.2em 0 0.2em 1.4em;
	font-size: .9em;
}

