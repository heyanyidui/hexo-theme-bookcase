<% 
    var path = page.path
    // 如果是主页
    if (path == "index.html") {
        site.posts.forEach(function(p){
            if (p.title == "home") {
                post = p
            }
        })

    }
    else {
    	var category;
    	category = site.categories.first();
    	site.categories.forEach(function(cate) {
            if(cate.name == theme.indicate) {
            	category = cate;
            }
        });
        post = category.posts.first();
    }
%>

<%- partial('_partial/article', {post: post}) %>